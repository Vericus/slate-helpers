{
  "version": "0.0.1",
  "name": "@vericus/<%= module %>",
  "description": "<%= description %>",
  "homepage": "https://github.com/Vericus/slate-kit/",
  "repository": "git://github.com/Vericus/slate-kit.git",
  "author": "Cadmus",
  "slate-kit": {
    "type": "module"
  },
  "files": [
    "dist/",
    "lib/",
    "module/"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/<%= module %>.js",
  "types": "lib/index.d.ts",
  "module": "lib/<%= module %>.es.js",
  "umd": "dist/<%= module %>.js",
  "umdMin": "dist/<%= module %>.min.js",
  "scripts": {
    "clean": "rm -rf ./dist ./lib ./node_modules ./module",
    "build": "BABEL_ENV=build babel ./src --out-dir ./module"
  },
  "scripts": {
    "clean": "yarn run clean:module && yarn run clean:build",
    "clean:module": "rm -rf ./node_modules",
    "clean:build": "rm -rf ./dist ./lib ./module",
    "build": "tsc -b .",
    "dev": "tsc -w ."
  },
  "umdGlobals": {
    "immutable": "Immutable",
    "slate": "Slate"
  },
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "keywords": [
    "Vericus",
    "slate",
    "slate-kit"
  ]
}
