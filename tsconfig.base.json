{
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "*.d.ts",
    "**/*.d.ts",
    "**/lib/**/*.ts",
    "**/dist/**/*.ts",
    "**/module/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "sourceMap": true,
    "pretty": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "paths": {
      "@vericus/slate-kit*": ["packages/*/src", "packages/*/lib"],
      "*": [
        "node_modules/*",
        "node_modules/@types/*",
        "packages/typescript-typings/types/*",
        "*"
      ]
    }
  },
  "include": ["packages/**/src/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "types": ["react", "jest"]
}
