{
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "**/node_modules",
    "*.d.ts",
    "**/*.d.ts",
    "**/lib/**/*.ts",
    "**/dist/**/*.ts",
    "**/module/**/*.ts"
  ],
  "include": [
    "packages/**/src/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ES2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "pretty": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "paths": {
      "*": [
        "packages/typescript-typings/types/*"
      ]
    },
    "types": [
      "react",
      "jest",
      "node"
    ]
  }
}
