{
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "**/node_modules",
    "*.d.ts",
    "**/*.d.ts",
    "**/lib/**/*.ts",
    "**/dist/**/*.ts",
    "**/module/**/*.ts"
  ],
  "include": ["packages/**/src/**/*.ts"],
  "compilerOptions": {
    "module": "esNext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "sourceMap": true,
    "pretty": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "skipLibCheck": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "typeRoots": [
      "./node_modules/@types",
      "./packages/typescript-typings/types"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": [
      "react",
      "jest",
      "node",
      "slate",
      "slate-react",
      "slate-plain-serializer",
      "slate-html-serializer",
      "slate-base64-serializer"
    ]
  },
  "references": [
    {"path":"packages/html-serializer"},
    {"path":"packages/paste-helpers"},
    {"path":"packages/plugins-align"},
    {"path":"packages/plugins-features-basic-text-formatting"},
    {"path":"packages/plugins-features-basic-typhography"},
    {"path":"packages/plugins-features-highlight-text"},
    {"path":"packages/plugins-features-history"},
    {"path":"packages/plugins-features-media"},
    {"path":"packages/plugins-helpers-bind-hotkey"},
    {"path":"packages/plugins-indent"},
    {"path":"packages/plugins-indentable-list"},
    {"path":"packages/plugins-read-only"},
    {"path":"packages/plugins-renderer"},
    {"path":"packages/plugins-renderer-basic-text-formatting"},
    {"path":"packages/plugins-renderer-basic-typography"},
    {"path":"packages/plugins-renderer-highlight-text"},
    {"path":"packages/plugins-renderer-indentable-list"},
    {"path":"packages/plugins-renderer-media"},
    {"path":"packages/typescript-typings"},
    {"path":"packages/utils"},
    {"path":"packages/utils-auto-replace"},
    {"path":"packages/utils-hyperscript"},
    {"path":"packages/utils-placeholders"},
    {"path":"packages/utils-register-helpers"},
    {"path":"packages/utils-toolbars"}
  ]
}
