{
  "exclude": ["**/*.spec.ts", "node_modules", "*.d.ts", "**/*.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "pretty": true,
    "jsx": "react",
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "paths": {
      "@vericus/slate-kit*": ["packages/*/src", "packages/*/lib"],
      "*": [
        "node_modules/*",
        "node_modules/@types/*",
        "packages/typescript-typings/types/*",
        "*"
      ]
    }
  },
  "types": ["react", "jest"]
}
