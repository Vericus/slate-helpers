{
  "exclude": ["**/*.spec.ts", "node_modules", "*.d.ts", "**/*.d.ts"],
  "typeRoots": ["packages/typescript-typings/types", "node_modules/@types"],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "pretty": true,
    "jsx": "react",
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true
  }
}
