    "slate-hyperscript": "*",
    "slate-plain-serializer": "*",
    "slate-prop-types": "*",
    "slate-react": "*",
    "slate-schema-violations": "*",
    "slate-simulator": "*",
    "storybook-readme": "^3.2.1",
    "style-loader": "^0.20.3",
