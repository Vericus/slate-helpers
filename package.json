    "yo": "^2.0.1"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "immutable": "^3.8.2",
    "npm": "^5.8.0"
  },
  "resolutions": {
    "slate-auto-replace/**/is-hotkey": "^0.1.2",
    "is-hotkey": "^0.1.2",
    "rollup-plugin-babel/**/rollup-pluginutils": "^2.0.1"
  }
}
