{
  "name": "slate-kit",
  "description": "A collection of slate's plugins and utils",
  "version": "0.0.40",
  "repository": "git://github.com/Vericus/slate-kit.git",
  "author": "Cadmus",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap && yarn && yarn run flow:setup",
    "bootstrap:build": "yarn bootstrap && yarn build",
    "build-storybook": "build-storybook",
    "build": "yarn run build:packages && lerna run build --parallel",
    "build:packages": "rollup --config ./support/rollup/config.js",
    "clean": "lerna clean --yes && lerna run clean --yes && rm -rf ./node_modules ./flow-typed",
    "flow:setup": "yarn run flow:symlink && yarn run flow:install",
    "flow:symlink": "flow-mono create-symlinks .flowconfig",
    "flow:install": "flow-mono install-types --ignore-deps=peer --overwrite",
    "gh-pages": "NODE_ENV=gh-pages babel-node support/gh-pages/deploy.js",
    "lint": "eslint packages",
    "new-module": "support/script/new-module",
    "precommit": "lint-staged",
    "prettier": "prettier --write '**/*.{js,jsx,md,json,css}'",
    "release:build": "lerna publish && yarn build",
    "release:gh-pages": "yarn build-storybook && yarn gh-pages",
    "storybook": "start-storybook -p 6006",
    "test": "jest --no-cache --logHeapUsage --colors",
    "updated": "lerna updated || exit 0",
    "watch": "npm-run-all --parallel --print-label watch:test watch:build watch:build-packages storybook",
    "watch:test": "yarn run test --watch",
    "watch:build-packages": "yarn run build:packages --watch",
    "watch:build": "lerna run build --watch --parallel"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/test/**/?(*.)(spec|test).js?(x)",
      "**/?(*.)(spec|test).js?(x)"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.0",
    "@storybook/addon-events": "^3.4.0",
    "@storybook/addon-knobs": "^3.4.0",
    "@storybook/addon-links": "^3.4.0",
    "@storybook/addon-options": "^3.4.0",
    "@storybook/addon-storysource": "^3.4.0",
    "@storybook/addons": "^3.4.0",
    "@storybook/react": "^3.4.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "can-npm-publish": "^1.1.0",
    "chalk": "^2.3.2",
    "child-process-promise": "^2.2.1",
    "chokidar": "^2.0.3",
    "compare-versions": "^3.1.0",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-flowtype-errors": "^3.5.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "flow-bin": "0.74.0",
    "flow-mono-cli": "^1.3.1",
    "fs-extra": "^5.0.0",
    "gh-pages": "^1.1.0",
    "gulp": "^3.9.1",
    "husky": "^0.14.3",
    "is-hotkey": "*",
    "jest": "^22.4.3",
    "lerna": "^2.11.0",
    "lerna-alias": "^3.0.2",
    "lerna-get-packages": "^1.0.0",
    "lint-staged": "^7.0.4",
    "lodash": "^4.17.10",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.13.5",
    "prop-types": "^15.6.1",
